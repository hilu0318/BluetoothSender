<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="300dp"
    a:layout_height="60dp"
    a:background="@android:color/background_light"
    a:gravity="center_vertical|center">

    <ProgressBar
        a:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_alignParentStart="true"
        a:layout_alignParentTop="true" />

    <TextView
        a:id="@+id/textView"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_alignBottom="@+id/progressBar3"
        a:layout_alignTop="@+id/progressBar3"
        a:layout_marginStart="20dp"
        a:layout_toEndOf="@+id/progressBar3"
        a:gravity="center_vertical"
        a:text="로딩중입니다..."
        a:textSize="30sp" />

</RelativeLayout>