<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="80dp">

    <TextView
        a:id="@+id/ad_ms_filename"
        a:layout_width="match_parent"
        a:layout_height="40dp"
        a:layout_alignParentStart="true"
        a:layout_alignParentTop="true"
        a:gravity="center_vertical"
        a:paddingLeft="20dp"
        a:text="TextView"
        a:textSize="24sp" />

    <TextView
        a:id="@+id/ad_ms_filesize"
        a:layout_width="150dp"
        a:layout_height="40dp"
        a:layout_alignParentStart="true"
        a:layout_below="@+id/ad_ms_filename"
        a:gravity="center_vertical"
        a:paddingLeft="20dp"
        a:text="TextView" />

    <TextView
        a:id="@+id/ad_ms_mimetype"
        a:layout_width="150dp"
        a:layout_height="40dp"
        a:layout_alignParentBottom="true"
        a:layout_toEndOf="@+id/ad_ms_filesize"
        a:gravity="center_vertical"
        a:paddingLeft="20dp"
        a:text="TextView" />
</RelativeLayout>